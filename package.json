{
    "name": "design-system-manager",
    "version": "1.0.0",
    "description": "A comprehensive design system management application with Express API and frontend",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "build": "npm install",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "seed:components": "node scripts/seed-components.js",
        "add:theme-tokens": "node scripts/add-theme-tokens.js",
        "add:spacing-tokens": "node scripts/add-spacing-tokens.js",
        "seed:design-tokens": "node scripts/seed-design-tokens.js"
    },
    "keywords": [
        "design-system",
        "design-tokens",
        "components",
        "express",
        "mongodb",
        "authentication"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.16.0",
        "mongoose": "^7.5.0",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "jest": "^29.5.0",
        "mongodb-memory-server": "^8.12.2",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ],
        "testMatch": [
            "<rootDir>/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "models/**/*.js",
            "routes/**/*.js",
            "middleware/**/*.js",
            "server.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}
